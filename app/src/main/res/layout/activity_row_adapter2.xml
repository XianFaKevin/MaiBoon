<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.orange.maiboon.RowAdapter2">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/date"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"

            android:layout_centerInParent="true"
            android:paddingLeft="@dimen/acRowPadding"
            android:paddingRight="@dimen/acRowPadding"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/note"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"

            android:layout_centerInParent="true"
            android:paddingLeft="@dimen/acRowPadding"
            android:paddingRight="@dimen/acRowPadding"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rev"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"

            android:layout_centerInParent="true"
            android:paddingLeft="@dimen/acRowPadding"
            android:paddingRight="@dimen/acRowPadding"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cost"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"

            android:layout_centerInParent="true"
            android:paddingLeft="@dimen/acRowPadding"
            android:paddingRight="@dimen/acRowPadding"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/profit"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"

            android:layout_centerInParent="true"
            android:paddingLeft="@dimen/acRowPadding"
            android:paddingRight="@dimen/acRowPadding"/>
    </RelativeLayout>

</LinearLayout>
