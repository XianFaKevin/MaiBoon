<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/blue"
    android:id="@+id/rl">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textMedium"
        android:textStyle="bold"
        android:text="dateText"
        android:id="@+id/dateText"
        android:padding="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSmall"
        android:textStyle="bold"
        android:text="电话："
        android:id="@+id/contactLabel"
        android:layout_below="@+id/dateText"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSmall"
        android:textStyle="bold"
        android:text="123456789"
        android:id="@+id/contactText"
        android:layout_below="@+id/dateText"
        android:layout_toRightOf="@+id/contactLabel"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSmall"
        android:textStyle="bold"
        android:text="人数："
        android:id="@+id/peoLabel"
        android:layout_below="@+id/contactText"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSmall"
        android:textStyle="bold"
        android:text="TV2"
        android:id="@+id/peoText"
        android:layout_below="@+id/contactText"
        android:layout_toRightOf="@+id/peoLabel"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSmall"
        android:textStyle="bold"
        android:text="房号："
        android:id="@+id/rmLabel"
        android:layout_below="@+id/contactText"
        android:layout_toRightOf="@+id/peoText"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSmall"
        android:textStyle="bold"
        android:text="TV3"
        android:id="@+id/rmText"
        android:layout_below="@+id/contactText"
        android:layout_toRightOf="@+id/rmLabel"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSmall"
        android:textStyle="bold"
        android:text="几天："
        android:id="@+id/durLabel"
        android:layout_toRightOf="@+id/rmText"
        android:layout_below="@+id/contactText"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSmall"
        android:textStyle="bold"
        android:text="TV4"
        android:id="@+id/durText"
        android:layout_toRightOf="@+id/durLabel"
        android:layout_below="@+id/contactText"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/periodText"
        android:layout_toRightOf="@+id/contactText"
        android:textStyle="bold"
        android:layout_below="@+id/dateText"
        android:textSize="@dimen/textSmall"
        android:padding="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accText"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/textMedium"
        android:textStyle="bold"
        android:padding="15dp"/>

</RelativeLayout>